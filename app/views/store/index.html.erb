<div class="container">


<div class="product">
<h2>Pack of 4 Tickets for $16</h2>
<h3>You Deserve to Win! </h3>

<div class="card">
<%= image_tag("lotterywin.jpg", alt: "ONLINE WALK TICKETS")%>
</div>

<%= form_tag charges_path, class: "payment-form" do %>
    <article>
      <% if flash[:error].present? %>
        <div id="error_explanation">
          <p><%= flash[:error] %></p>
        </div>
     <% end %>
    </article>

    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="<%%= Rails.configuration.stripe[:publishable_key] %>"
            data-description="Pack of 4 tickets"
            data-amount="500"
            data-label="Buy to Win"
            data-locale="auto"></script>
<% end %>
</div>
</div>
